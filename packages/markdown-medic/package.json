{
  "name": "@outfitter/markdown-medic",
  "version": "1.0.4",
  "description": "Opinionated markdown linting and formatting for healthy documentation",
  "keywords": [
    "markdown",
    "linting",
    "formatting",
    "documentation",
    "markdownlint",
    "md"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "mdlint": "./dist/cli.js"
  },
  "files": [
    "dist",
    "configs"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "markdownlint": "^0.36.1",
    "markdownlint-cli2": "^0.15.0",
    "chalk": "^5.4.1",
    "commander": "^12.1.0",
    "glob": "^11.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@outfitter/typescript-config": "workspace:*",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.7.4",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "peerDependencies": {
    "@outfitter/contracts": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@outfitter/contracts": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/outfitter-dev/monorepo.git",
    "directory": "packages/markdown-medic"
  },
  "bugs": {
    "url": "https://github.com/outfitter-dev/monorepo/issues"
  },
  "homepage": "https://github.com/outfitter-dev/monorepo#readme",
  "publishConfig": {
    "access": "public"
  }
}