{
  "test": {
    "roots": ["./src", "./test"],
    "coverage": {
      "enabled": true,
      "reporter": ["text", "lcov"],
      "threshold": {
        "lines": 80,
        "functions": 80,
        "branches": 80,
        "statements": 80
      }
    },
    "timeout": 5000,
    "bail": false,
    "preload": ["./test/setup.ts"]
  }
}
