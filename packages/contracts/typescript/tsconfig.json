{
  "extends": "../../typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": true,
    "tsBuildInfoFile": "./dist/tsconfig.buildinfo",
    "noEmit": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts"],
  "files": ["src/index.ts", "src/result.ts", "src/error.ts", "src/assert.ts", "src/types.ts", "src/errors/index.ts"]
}
