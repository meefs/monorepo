{
  "name": "@outfitter/monorepo",
  "version": "0.0.0",
  "description": "Core shared configurations and utilities for Outfitter projects",
  "private": true,
  "engines": {
    "node": ">=20",
    "bun": "1.2.19"
  },
  "packageManager": "bun@1.2.19",
  "workspaces": [
    "packages/*",
    "packages/contracts/*",
    "shared"
  ],
  "scripts": {
    "dev": "echo 'Use bun run dev in specific package directory'",
    "build": "bun --filter=\"@outfitter/contracts\" run build && bun --filter=\"@outfitter/baselayer\" run build && bun --filter=\"*\" run build",
    "build:all": "bun run build",
    "test:all": "bun --filter=\"*\" run test",
    "test": "bun test",
    "lint": "bunx ultracite lint .",
    "lint:fix": "bunx ultracite format .",
    "lint:md": "bunx markdownlint-cli2 .",
    "format": "bunx ultracite format .",
    "format:fix": "bunx ultracite format .",
    "format:md": "bunx markdownlint-cli2 . --fix",
    "type-check": "bunx tsc --noEmit",
    "check": "bunx ultracite format .",
    "check:ci": "bunx ultracite format .",
    "ci": "bun run format && bun run lint && bun run lint:md && bun run type-check && bun run test:all",
    "ci:local": "bun run format:fix && bun run lint && bun run lint:md && bun run type-check && bun run test:all",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "check:all": "bun run format && bun run lint && bun run lint:md && bun run type-check",
    "config:mdlint": "bun ./scripts/generate-mdlint-config.mjs",
    "check:imports": "bun ./scripts/check-contracts-imports.ts",
    "prepare": "lefthook install && bun config:mdlint"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@changesets/cli": "^2.29.5",
    "@types/bun": "latest",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.19.10",
    "glob": "^11.0.3",
    "lefthook": "^1.12.3",
    "markdownlint-cli2": "^0.15.0",
    "type-fest": "^4.41.0",
    "typescript": "^5.9.2",
    "ultracite": "^5.2.4",
    "vitest": "^1.6.1"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/outfitter-dev/monorepo.git"
  },
  "homepage": "https://github.com/outfitter-dev/monorepo#readme",
  "bugs": {
    "url": "https://github.com/outfitter-dev/monorepo/issues"
  }
}
